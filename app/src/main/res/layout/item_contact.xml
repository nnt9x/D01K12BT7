<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">

    <ImageView
        android:id="@+id/imgItemContact"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/contact" />

    <TextView
        android:id="@+id/tvItemContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact 1"
        android:textStyle="bold"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="@id/imgItemContact"
        app:layout_constraintBottom_toTopOf="@id/tvItemPhone"
        app:layout_constraintLeft_toRightOf="@id/imgItemContact"/>

    <TextView
        android:id="@+id/tvItemPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="091276232"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="@id/imgItemContact"
        app:layout_constraintTop_toBottomOf="@id/tvItemContact"
        app:layout_constraintLeft_toRightOf="@id/imgItemContact"/>

</androidx.constraintlayout.widget.ConstraintLayout>